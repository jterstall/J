<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="terstall.jeroenterstall_pset3.ShowMovieInformation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_title"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:padding="16dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="8dp"
                    android:id="@+id/movie_genre_runtime"
                    android:layout_below="@id/movie_title"/>
                <ImageView
                    android:layout_below="@id/movie_genre_runtime"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/posterImage"
                    android:padding="16dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/posterImage"
                    android:onClick="addToWatchList"
                    android:id="@+id/watchlist_icon"
                    android:layout_margin="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_plot"
                    android:layout_below="@id/watchlist_icon"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_plot"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/movie_rating_imdb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_rating_imdb"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/movie_rating_rottentomatoes"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@id/movie_rating_rottentomatoes"
                    android:paddingBottom="16dp"
                    android:id="@+id/movie_rating_metascore"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@id/movie_rating_metascore"
                    android:id="@+id/movie_director"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@id/movie_director"
                    android:id="@+id/movie_writer"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@id/movie_writer"
                    android:id="@+id/movie_actors"/>
        </RelativeLayout>
</ScrollView>